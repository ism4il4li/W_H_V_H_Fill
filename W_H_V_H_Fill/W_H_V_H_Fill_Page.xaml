<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="W_H_V_H_Fill.W_H_V_H_Fill_Page"
             Title="W_H_V_H_Fill_Page">
    <StackLayout>
        <!--if you change padding bottom, you see then Expand effect-->
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" Padding="10,10,0,10" />
        <BoxView Color="Blue" Margin="10" 
                 HeightRequest="100" 
                 WidthRequest="200"
                 HorizontalOptions="Start" 
                 VerticalOptions="EndAndExpand"
                 />
        <!--if Height and Width defined VerticalOptions do nothing-->
        <BoxView Color="Red" Margin="10" 
                 HeightRequest="100"
                 WidthRequest="100" 
                 HorizontalOptions="Center" 
                 VerticalOptions="EndAndExpand"
                 />
        <!-- if WidthRequest not defined then fill=> default= Fill-->
        <BoxView Color="Aqua" 
                 HorizontalOptions="Fill" 
                 VerticalOptions="EndAndExpand"
                 />
    </StackLayout>
</ContentPage>